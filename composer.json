{
    "name": "splashphp/splashphp",
    "description": "Php web framework for developing web applications",
    "keywords": [
        "microframework",
        "splashphp"
    ],
    "homepage": "http://github.com/splashphp/splashphp",
    "license": "MIT",
    "authors": [
        {
            "name": "Prince Darlington",
            "email": "ekeminyd@gmail.com"
        },
        {
            "name": "Obinna John",
            "email": "johnsamuel254@yahoo.com"
        }
    ],
    "require": {
        "php": "^7.1.23 || ^7.5",
        "splashphp/core": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "spl/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
