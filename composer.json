{
    "name": "splashphp/splashphp",
    "description": "Php web framework for developing web applications",
    "keywords": [
        "microframework",
        "splashphp"
    ],
    "homepage": "http://github.com/splashphp/splashphp",
    "license": "MIT",
    "authors": [
        {
            "name": "Prince Darlington",
            "email": "ekeminyd@gmail.com"
        },
        {
            "name": "Obinna John",
            "email": "johnsamuel254@yahoo.com"
        }
    ],
    "require": {
        "php": "^7.1.23 || ^7.5",
        "splashphp/core": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "spl/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
     "config": {
            "preferred-install": "dist",
            "sort-packages": true,
            "optimize-autoloader": true
    }
}
